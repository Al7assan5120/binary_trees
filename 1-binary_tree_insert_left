#include"binary_trees.h"


binary_tree_t *binary_tree_insert_left(binary_tree_t *parent, int value)
{
    binary_tree_t *p;
    binary_tree_t *ptr;
    p = malloc(sizeof(binary_tree_t));
    if (p == NULL || parent == NULL)
    {
        return (NULL);
    }
    p->left = NULL;
    p->right = NULL;
    p->n = value;
    p->parent = parent;
    if (parent->left == NULL)
    {
        parent->left = p;
    }
    else
    {
        ptr = parent->left;
        parent->left = p;
        p->left = ptr;
    }
    return (p);
}
